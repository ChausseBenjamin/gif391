  % editor    = {{}}, % Interchangeable avec author
  author    = {{Alexandre Nom}},
  % Édition du livre, I'édition est obligatoire uniquement a partir de la 2°
  edition   = {{2}}, % TODO: check if I have to write 2e edition
  % Nom de la maison d’édition qui a publié le livre
  publisher = {{Maison d'édition}},
  % Nombre total de pages du livre
  pages     = {{456}},
  % Titre du livre
  title     = {{Titre du livre}},
  % OPTIONEL: Nom de la ville et du pays de la maison d’édition
  address   = {{Ville, Pays}},
  % OPTIONEL: Numéro de volume du livre
  volume    = {{1}},

}

